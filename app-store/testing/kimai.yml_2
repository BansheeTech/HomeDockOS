---
version: "2.1"
services:
  kimai:
    image: lscr.io/linuxserver/kimai:latest
    container_name: kimai
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
      - DATABASE_URL=mysql://your_db_user:your_db_pass@your_db_host:3306/your_db_name
    volumes:
      - [[INSTALL_PATH]]/kimai:/config
    ports:
      - 80:80
      - 443:443
    restart: unless-stopped
# This container requires an external application to be run separately.
# MariaDB
  kimai_mariadb:
    image: lscr.io/linuxserver/mariadb:latest
    container_name: kimai_mariadb
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Etc/UTC
      - MYSQL_ROOT_PASSWORD=ROOT_ACCESS_PASSWORD
      - MYSQL_DATABASE=your_db_name #optional
      - MYSQL_USER=your_db_user #optional
      - MYSQL_PASSWORD=your_db_pass #optional
    volumes:
      - [[INSTALL_PATH]]/kimai_db:/config
    ports:
      - 3306:3306
    restart: unless-stopped

